Q.4.Implement Stack as an ADT and use it to evaluate a prefix/postfix expression-

#include <iostream>
#include <cstring>
#include <cmath>
using namespace std;

// -------------------------------------------------------
// STACK ADT IMPLEMENTATION
// -------------------------------------------------------
class Stack {
private:
    int arr[100];
    int top;

public:
    Stack() { top = -1; }

    bool isEmpty() { return top == -1; }

    bool isFull() { return top == 99; }

    void push(int x) {
        if (isFull()) {
            cout << "Stack Overflow\n";
            return;
        }
        arr[++top] = x;
    }

    int pop() {
        if (isEmpty()) {
            cout << "Stack Underflow\n";
            return -1;
        }
        return arr[top--];
    }

    int peek() {
        if (isEmpty()) return -1;
        return arr[top];
    }
};

// -------------------------------------------------------
// CHECK IF OPERATOR
// -------------------------------------------------------
bool isOperator(char c) {
    return (c == '+' || c == '-' || c == '*' || c == '/' || c == '^');
}

// -------------------------------------------------------
// POSTFIX EXPRESSION EVALUATION
// -------------------------------------------------------
int evaluatePostfix(string exp) {
    Stack st;

    for (int i = 0; i < exp.length(); i++) {

        // Skip spaces
        if (exp[i] == ' ') continue;

        // If operand → handle multi-digit numbers
        if (isdigit(exp[i])) {
            int num = 0;

            while (i < exp.length() && isdigit(exp[i])) {
                num = num * 10 + (exp[i] - '0');
                i++;
            }
            i--; 
            st.push(num);
        }

        // If operator → pop two values
        else if (isOperator(exp[i])) {
            int val2 = st.pop();
            int val1 = st.pop();

            switch (exp[i]) {
                case '+': st.push(val1 + val2); break;
                case '-': st.push(val1 - val2); break;
                case '*': st.push(val1 * val2); break;
                case '/': st.push(val1 / val2); break;
                case '^': st.push(pow(val1, val2)); break;
            }
        }
    }

    return st.pop();
}

// -------------------------------------------------------
// PREFIX EXPRESSION EVALUATION
// -------------------------------------------------------
int evaluatePrefix(string exp) {
    Stack st;

    // Scan from RIGHT to LEFT
    for (int i = exp.length() - 1; i >= 0; i--) {

        if (exp[i] == ' ') continue;

        // If operand → handle multi-digit numbers
        if (isdigit(exp[i])) {
            int num = 0, base = 1;

            while (i >= 0 && isdigit(exp[i])) {
                num = num + (exp[i] - '0') * base;
                base *= 10;
                i--;
            }
            i++; 
            st.push(num);
        }

        // If operator → pop two values
        else if (isOperator(exp[i])) {
            int val1 = st.pop();
            int val2 = st.pop();

            switch (exp[i]) {
                case '+': st.push(val1 + val2); break;
                case '-': st.push(val1 - val2); break;
                case '*': st.push(val1 * val2); break;
                case '/': st.push(val1 / val2); break;
                case '^': st.push(pow(val1, val2)); break;
            }
        }
    }

    return st.pop();
}

// -------------------------------------------------------
// MAIN FUNCTION
// -------------------------------------------------------
int main() {
    string postfix, prefix;

    cout << "Enter Postfix Expression: ";
    getline(cin, postfix);

    cout << "Postfix Evaluation Result = "
         << evaluatePostfix(postfix) << endl;

    cout << "\nEnter Prefix Expression: ";
    getline(cin, prefix);

    cout << "Prefix Evaluation Result = "
         << evaluatePrefix(prefix) << endl;

    return 0;
}
