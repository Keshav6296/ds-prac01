Q.1.Write a program to implement singly linked list as an ADT that supports the following oper
ations-
#include <iostream>
using namespace std;

// Node structure
struct Node {
    int data;
    Node* next;
    
    Node(int x) {
        data = x;
        next = nullptr;
    }
};

// Singly Linked List ADT
class SinglyLinkedList {
private:
    Node* head;

public:
    SinglyLinkedList() {
        head = nullptr;
    }

    // -------------------------------
    // 1. Insert at beginning
    // -------------------------------
    void insertAtBeginning(int x) {
        Node* temp = new Node(x);
        temp->next = head;
        head = temp;
    }

    // -------------------------------
    // 2. Insert at ith position (1-based index)
    // -------------------------------
    void insertAtPosition(int x, int pos) {
        if (pos < 1) {
            cout << "Invalid Position\n";
            return;
        }

        if (pos == 1) {
            insertAtBeginning(x);
            return;
        }

        Node* temp = new Node(x);
        Node* curr = head;

        for (int i = 1; i < pos - 1 && curr != nullptr; i++) {
            curr = curr->next;
        }

        if (curr == nullptr) {
            cout << "Position out of bounds\n";
            delete temp;
            return;
        }

        temp->next = curr->next;
        curr->next = temp;
    }

    // -------------------------------
    // 3. Remove from beginning
    // -------------------------------
    void removeFromBeginning() {
        if (head == nullptr) {
            cout << "List is empty\n";
            return;
        }

        Node* temp = head;
        head = head->next;
        delete temp;
    }

    // -------------------------------
    // 4. Remove from ith position
    // -------------------------------
    void removeFromPosition(int pos) {
        if (head == nullptr || pos < 1) {
            cout << "Invalid Operation\n";
            return;
        }

        if (pos == 1) {
            removeFromBeginning();
            return;
        }

        Node* curr = head;
        for (int i = 1; i < pos - 1 && curr != nullptr; i++) {
            curr = curr->next;
        }

        if (curr == nullptr || curr->next == nullptr) {
            cout << "Position out of bounds\n";
            return;
        }

        Node* temp = curr->next;
        curr->next = temp->next;
        delete temp;
    }

    // -------------------------------
    // 5. Search for an element & return pointer
    // -------------------------------
    Node* search(int x) {
        Node* curr = head;
        while (curr != nullptr) {
            if (curr->data == x)
                return curr;
            curr = curr->next;
        }
        return nullptr; // Not found
    }

    // Display list
    void display() {
        Node* curr = head;
        while (curr != nullptr) {
            cout << curr->data << " ";
            curr = curr->next;
        }
        cout << "\n";
    }
};

int main() {
    SinglyLinkedList list;

    list.insertAtBeginning(5);
    list.insertAtBeginning(10);
    list.insertAtPosition(20, 2);
    list.insertAtPosition(15, 3);

    cout << "List after insertions: ";
    list.display();

    list.removeFromBeginning();
    cout << "After removing from beginning: ";
    list.display();

    list.removeFromPosition(2);
    cout << "After removing at position 2: ";
    list.display();

    Node* found = list.search(20);
    if (found)
        cout << "Element 20 found at node: " << found << "\n";
    else
        cout << "Element 20 not found\n";

    return 0;
}
